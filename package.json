{
  "name": "harp-browserify-react-rrouter",
  "version": "0.0.0",
  "description": "Template project for using browserify along with harp.",
  "dependencies": {
    "bluebird": "^2.1.1",
    "envify": "^1.2.1",
    "react": "^0.10.0",
    "react-async": "^0.9.4",
    "rrouter": "^0.3.2"
  },
  "devDependencies": {
    "browserify": "^4.1.10",
    "harp": "^0.12.1",
    "reactify": "^0.13.1",
    "watchify": "^0.10.2"
  },
  "scripts": {
    "watch": "./node_modules/.bin/harp server public & npm run watch-js",
    "watch-js": "./node_modules/.bin/watchify -t [reactify --es6 --everything] public/scripts/app.js -o public/app-bundle.js",
    "bundle-js": "./node_modules/.bin/browserify -t [reactify --es6 --everything] public/scripts/app.js > public/app-bundle.js"
  },
  "author": "@torgeir",
  "license": "mit"
}
